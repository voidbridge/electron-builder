{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2017",
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "out",
    "newLine": "LF",
    "noEmitOnError": true,
    "inlineSources": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noEmitHelpers": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "rootDirs": [
    "src",
    "../src"
  ],
  "include": [
    "../typings/*.d.ts",
    "typings/*.d.ts",
    "src/**/*.ts",
    "../node_modules/fs-extra-p/index.d.ts",
    "../node_modules/bluebird-lst-c/index.d.ts",
    "../node_modules/electron-macos-sign/index.d.ts",
    "../node_modules/@types/**/*.d.ts"
  ],
  "exclude": [
  ]
}
